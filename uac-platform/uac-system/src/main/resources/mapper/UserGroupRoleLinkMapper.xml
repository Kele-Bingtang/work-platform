<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.youngkbt.uac.sys.mapper.UserGroupRoleLinkMapper">

    <resultMap id="BaseResultMap" type="cn.youngkbt.uac.sys.model.po.UserGroupRoleLink">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="userGroupId" column="user_group_id" jdbcType="VARCHAR"/>
            <result property="roleId" column="role_id" jdbcType="VARCHAR"/>
            <result property="createBy" column="create_by" jdbcType="VARCHAR"/>
            <result property="createById" column="create_by_id" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateBy" column="update_by" jdbcType="VARCHAR"/>
            <result property="updateById" column="update_by_id" jdbcType="VARCHAR"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="status" column="status" jdbcType="TINYINT"/>
            <result property="isDeleted" column="is_deleted" jdbcType="TINYINT"/>
            <result property="appId" column="app_id" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,user_group_id,role_id,
        create_by,create_by_id,create_time,
        update_by,update_by_id,update_time,
        status,is_deleted,app_id
    </sql>
    
    <select id="listRoleLinkByGroupId" resultType="cn.youngkbt.uac.sys.model.vo.link.RoleLinkInfoVO">
        select tsr.role_id, tsr.role_name, tsr.role_code, tugrl.id as link_id, tugrl.create_time, tugrl.app_id, tugrl.user_group_id
        from t_user_group_role_link tugrl
        left join t_sys_role tsr on tsr.role_id = tugrl.role_id and tsr.is_deleted = 0
        where tugrl.is_deleted = 0 and tugrl.user_group_id = #{userGroupId}
    </select>
</mapper>
