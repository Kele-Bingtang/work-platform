<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.youngkbt.uac.sys.mapper.SysRoleMapper">

    <resultMap id="BaseResultMap" type="cn.youngkbt.uac.sys.model.po.SysRole">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="roleId" column="role_id" jdbcType="VARCHAR"/>
            <result property="roleCode" column="role_code" jdbcType="VARCHAR"/>
            <result property="roleName" column="role_name" jdbcType="VARCHAR"/>
            <result property="intro" column="intro" jdbcType="VARCHAR"/>
            <result property="orderNum" column="order_num" jdbcType="INTEGER"/>
            <result property="createBy" column="create_by" jdbcType="VARCHAR"/>
            <result property="createById" column="create_by_id" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateBy" column="update_by" jdbcType="VARCHAR"/>
            <result property="updateById" column="update_by_id" jdbcType="VARCHAR"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="status" column="status" jdbcType="TINYINT"/>
            <result property="isDeleted" column="is_deleted" jdbcType="TINYINT"/>
            <result property="tenantId" column="tenant_id" jdbcType="VARCHAR"/>
            <result property="appId" column="app_id" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,role_id,role_code,
        role_name,intro,order_num,
        create_by,create_by_id,create_time,
        update_by,update_by_id,update_time,
        status,is_deleted,tenant_id,
        app_id
    </sql>
    
    <select id="selectByUserId" resultType="cn.youngkbt.uac.sys.model.po.SysRole">
        select tsr.* from t_sys_role tsr left join t_user_role_link turl on tsr.role_id = turl.role_id
            ${ew.getCustomSqlSegment}
    </select>
    
    <select id="selectWithDisabledByUserId" resultType="cn.youngkbt.uac.sys.model.vo.extra.RoleBindUserVO">
        select tsr.*, turl.user_id, case when turl.user_id is not null then 1 else 0 end as disabled
        from t_sys_role tsr left join t_user_role_link turl on tsr.role_id = turl.role_id and turl.user_id = #{userId}
        where tsr.app_id = #{appId}
    </select>
</mapper>
